{#
/**
 * @file
 * Default theme file to display a hub_resource__media__image item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'hub-resource',
    'hub-resource--type-' ~ resource_type|clean_class,
  ]
%}
<picture{{ attributes.addClass(classes) }}>
  {% if image %}
    {{ image }}
  {% endif %}
</article>
