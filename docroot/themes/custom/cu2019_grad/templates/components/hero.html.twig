<header{% if heroType != null %} class="{{ heroType }}"{% endif %}>
  {% if heroVid|length > 0 %}
    <video width="320" height="240" autoplay="true" poster="{% if heroVidPoster != "/" %}{{ heroVidPoster }}{% elseif heroVidPosterUrl != null %}{{ heroVidPosterUrl }}{% endif %}" loop>
      {% for vid in heroVid %}
        {% if vid.upload != "/"  %}
          <source src="{{ vid.upload }}" type="video/{{ vid.type }}">
        {% elseif vid.url != null %}
          <source src="{{ vid.url }}" type="video/{{ vid.type }}">
        {% endif %}
      {% endfor %}
      {% if heroVidPoster != "/" %}
        <img src="{{ heroVidPoster }}" alt="{{ heroVidPosterAlt }}">
      {% elseif heroVidPosterUrl != null %}
        <img src="{{ heroVidPosterUrl }}" alt="{{ heroVidPosterAlt }}">
      {% endif %}
    </video>
  {% elseif heroImg != null %}
    <picture>
      <img src="{{ heroImg }}" alt="{{ heroImgAlt }}">
    </picture>
  {% endif %}
    <div>
        {% if breadcrumb %}
          <nav aria-label="Breadcrumb" class="bc">
            <ol>
            {% for item in breadcrumb %}
              <li>
                {% if item.url %}
                  <a href="{{ item.url }}">{{ item.text }}</a>
                {% else %}
                  <a href="{{ item.url }}" aria-current="page">{{ item.text }}</a>
                {% endif %}
              </li>
            {% endfor %}
            </ol>
          </nav>
        {% endif %}
        {% if heroTitle %}
        <h1>{{ heroTitle }}</h1>
        {% endif %}
    </div>
</header>