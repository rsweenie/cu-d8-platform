<blockquote {% if class %}class="{{ class }}"{% endif %}>
  <div>
    <div class="quote">
      {% if quote %}
        {{ quote }}
      {% endif %}
      <div class="attr">
        {% if link %}<a href="{{ link }}">{% endif %}
        {% if name %}
          {{ name }}
        {% endif %}
        {% if title %}
            <span>, </span>{{ title }}
        {% endif %}
        {% if link %}</a>{% endif %}
        {% if area %}
            <br>
            <small>{{ area }}</small>
        {% endif %}
      </div>
    </div>
    {% if img %}
        {{ img }}
    {% endif %}
  </div>
</blockquote>
