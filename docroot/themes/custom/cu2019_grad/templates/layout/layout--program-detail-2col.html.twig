{#
/**
 * @file
 * Displays the 2 column program detail layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div {{ attributes.addClass('layout--program-detail-2col','section','slash') }}>
    <div class="row">
      <div class="col-xs-12 col-md-7 col-lg-8">
        {% if content.main %}
          <div {{ region_attributes.main.addClass('layout__region', 'layout__region--main') }}>
            {{ content.main }}
          </div>
        {% endif %}
      </div>

      <div class="col-xs-12 col-md-5 col-lg-4">
        {% if content.right %}
          <div {{ region_attributes.right.addClass('layout__region', 'layout__region--right') }}>
            <div class="program_rail">
              <div>
                {{ content.right }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}
