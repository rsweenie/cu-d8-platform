{#
/**
 * @file
 * Displays the generic hero layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div {{ attributes.addClass('layout--generic-hero') }}>
    <div class="row">
      <div class="col-sm-12">
        {% if content.main %}
          <div {{ region_attributes.main.addClass('layout__region', 'layout__region--main') }}>
            {{ content.main }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}
